{
    "manifest_version": 2,
    "name": "b64 to text",
    "version": "2.0",
    "description": "transforming b64 to text",
    "background": {
        "scripts": [
            "background/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "/icons/icon-32.png",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "notifications",
        "activeTab",
        "<all_urls>"
    ],
    "icons": {
        "128": "/icons/icon-128.png",
        "64": "/icons/icon-64.png",
        "32": "/icons/icon-32.png",
        "16": "/icons/icon-16.png"
    }
}